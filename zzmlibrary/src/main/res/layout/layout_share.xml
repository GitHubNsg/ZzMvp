<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccffffff">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30px">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/share_qq"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ssdk_oks_classic_qq"
                    android:padding="10px"
                    app:layout_auto_basewidth="width"
                    app:layout_auto_baseheight="width"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textSize="28px"
                    android:textColor="@color/gray_666666"
                    android:gravity="center"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/share_wechatm"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ssdk_oks_classic_wechatmoments"
                    android:padding="10px"
                    app:layout_auto_basewidth="width"
                    app:layout_auto_baseheight="width"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="微信朋友圈"
                    android:textSize="28px"
                    android:textColor="@color/gray_666666"
                    android:gravity="center"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/share_wechat"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ssdk_oks_classic_wechat"
                    android:padding="10px"
                    app:layout_auto_basewidth="width"
                    app:layout_auto_baseheight="width"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="微信朋友"
                    android:textSize="28px"
                    android:textColor="@color/gray_666666"
                    android:gravity="center"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/share_sina"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:visibility="gone">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ssdk_oks_classic_sinaweibo"
                    android:padding="10px"
                    app:layout_auto_basewidth="width"
                    app:layout_auto_baseheight="width"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="新浪"
                    android:textSize="28px"
                    android:textColor="@color/gray_666666"
                    android:gravity="center"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"/>
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>


    <TextView
        android:id="@+id/tv_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:text="取消"
        android:textColor="@color/black_000000"
        android:textSize="36px"
        android:gravity="center"
        android:background="@drawable/ripple_white_bg"/>
    
</com.zhy.autolayout.AutoLinearLayout>